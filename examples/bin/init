#!/usr/bin/env php
<?php
/**
 * init.php
 * @author Revin Roman
 * @link https://github.com/cookyii/build
 */

echo "\n  Initialize the application under 'env' environment? [yes|no] ";
$answer = trim(fgets(STDIN));
if (strncasecmp($answer, 'y', 1)) {
    echo "\n  Quit initialization.\n";

    exit(1);
}